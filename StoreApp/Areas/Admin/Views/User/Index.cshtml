@model IEnumerable<IdentityUser>

<div class="text-center">
    <div class="display-6">Users</div>
</div>
<div class="text-end">
<a class="btn btn-sm btn-outline-primary" asp-action="Create">
    <i class="fa fa-solid-plus"></i>
    Add
    </a></div>
<table>
    <thead>
       <tr>
        <th>Id</th>
        <th>UserName</th>
        <th>Roles</th>
        <th>Operations</th>
       </tr>
    </thead>
    <tbody>
        @foreach(IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>  
                <td>@user.UserName</td>  
                <td user-name="@user.UserName" user-role="">-</td>  
                <td>
                    <div class="btn-group">
                        <a class="btn btn-sm btn-warning" asp-action="Update"
                        asp-route-id="@user.UserName">Edit</a>

                         <a class="btn btn-sm btn-secondary" asp-action="ResetPassword"
                        asp-route-id="@user.UserName">Reset Password</a>

                        <form method="post" asp-action = "DeleteOneUser">
                            <input type="hidden" name="UserName" value="@user.UserName"/>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-solid fa-trash"></i>
                                Delete</button>
                        </form>
                        
                    </div>
                </td>  
            </tr>
        }
    </tbody>
</table>