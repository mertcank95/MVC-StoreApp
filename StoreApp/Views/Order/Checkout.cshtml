@model Order

<!--1️⃣ code CSS below -->

<style>

.btnc{

font-family: Roboto, sans-serif;
font-weight: 0;
font-size: 14px;
color: #fff;
background-color: #0066CC;
padding: 10px 30px;
border: 2px solid #0066cc;
box-shadow: rgb(0, 0, 0) 0px 0px 0px 0px;
border-radius: 50px;
transition : 1000ms;
transform: translateY(0);
display: flex;
flex-direction: row;
align-items: center;
cursor: pointer;
}

.btnc:hover{

transition : 1000ms;
padding: 10px 50px;
transform : translateY(-0px);
background-color: #fff;
color: #0066cc;
border: solid 2px #0066cc;
}

</style>

<!-- 2️⃣code HTML below -->

<button class="btn"></button>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout">
    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input class="form-controll" asp-for="Name" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Line1"></label>
        <input class="form-controll" asp-for="Line1" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Line2"></label>
        <input class="form-controll" asp-for="Line2" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Line3"></label>
        <input class="form-controll" asp-for="Line3" />
    </div>

    <div class="form-group my-3">
        <label asp-for="City"></label>
        <input class="form-controll" asp-for="City" />
    </div>

     <div class="form-group my-3">
        <input asp-for="GiftWrap">
        <label>Gift wrap these items.</label>
    </div>

    <div class="text-center">
        <button type="submit" class="btnc">
            Complate Order
        </button>
    </div>

</form>