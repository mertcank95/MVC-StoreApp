@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenuViewComponents")
        @await Component.InvokeAsync("ProductFilterMenuViewComponents")  
        <div products="" number="3">
        </div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Product prd in Model.Products)
            {
                <partial name="_ProductCard" model="@prd" />
            }
        </div>
        <!--page yapıları (page-class,page-class-normal) tag helpere gitcek-->
        <div class="text-center">
        <div page-model="@Model.Pagination" 
             page-action="Index" 
             page-class="btn"
             page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary"
             page-classes-enabled="true" 
             class="btn-group">
        </div>
        </div>
    </div>
</div>


